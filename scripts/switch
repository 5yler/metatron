#!/usr/bin/env python

##
# switch
# Python script for switching between radio-controlled RC mode, 
# Jetson mode, mixed mode.
# 
# @author  Syler Wagner  <syler@mit.edu>
#
# @date    2015-09-20    syler   creation
# @date    2015-09-21    syler   added mixed mode
##

import rospy
from std_msgs.msg import String   # for switching Jetson/RC mode
import sys, select, termios, tty

msg = """
r : switch to RC mode
a : switch to Jetson mode
m : switch to mixed mode (manual throttle, autonomous steering)
CTRL-C : quit
"""

def getKey():
    tty.setraw(sys.stdin.fileno())
    rlist, _, _ = select.select([sys.stdin], [], [], 0.1)
    if rlist:
        key = sys.stdin.read(1)
    else:
        key = ''

    termios.tcsetattr(sys.stdin, termios.TCSADRAIN, settings)
    return key


if __name__=="__main__":
    settings = termios.tcgetattr(sys.stdin)
    
    rospy.init_node('switch')

    # mode switching publisher
    switch_pub = rospy.Publisher('switch', String, queue_size=5)

    try:
        while(1):
            key = getKey()
            if key == 'r' :
                # switch to RC mode
                mode = String()
                mode.data = "RC"
                switch_pub.publish(mode)
                print " [>>>] Switched to RC mode!"
            elif key == 'a' :
                # switch to autonomous mode
                mode = String()
                mode.data = "Autonomous"
                switch_pub.publish(mode)
                print " [>>>] Switched to Jetson mode!"
            elif key == 'm' :
                # switch to autonomous mode
                mode = String()
                mode.data = "Mixed"
                switch_pub.publish(mode)
                print " [>>>] Switched to mixed mode!"
            else:
                if (key == '\x03'):
                    break

    except:
        print e

    finally:
        termios.tcsetattr(sys.stdin, termios.TCSADRAIN, settings)


