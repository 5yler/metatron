<?xml version="1.0"?>
<robot
    xmlns:xacro="http://www.ros.org/wiki/xacro"
    name="gigatron">

    <!-- Physical Constant Macros -->
    <xacro:property name="M_PI" value="3.1415926535897931" />

    <!-- Dimension Macros -->
    <!-- TODO: replace with Gigatron values -->
    <xacro:property name="car_length" value="0.254" /> <!-- 10" -->
    <xacro:property name="wheelbase_width" value="0.1778" />
    <xacro:property name="car_height" value="0.127" /> <!-- 5" -->
    <xacro:property name="wheel_radius" value="0.0333" />
    <xacro:property name="wheel_width" value="0.0254" /> <!-- 1" -->
    
    <!-- Physical Material Macros -->
    <material name="Grey">
        <color rgba="0 0 0 0.5"/>
    </material>
    <material name="Blue">
        <color rgba="0 0 1.0 0.5"/>
    </material>
    <material name="Black">
        <color rgba="0 0 0 1.0"/>
    </material>
    <material name="Aqua">
        <color rgba="0 255 255 1.0"/>
    </material>


    <!-- Main body -->
    <link name="base_link">
        <inertial>
            <mass value="0.2" />
            <origin xyz="0 0 0" /> 
            <inertia  ixx="0.2" ixy="0.0"  ixz="0.0"  iyy="0.2"  iyz="0.0"  izz="0.2" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="${car_length} ${wheelbase_width} ${car_height}" />
            </geometry>
            <material name="Grey"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="${car_length} ${wheelbase_width} ${car_height}" />
            </geometry>
        </collision>
    </link>
    

    <!-- the front left wheel -->
    <joint name="front_left_wheel_joint" type="revolute" >
        <limit lower="-0.76096" upper="0.76096" effort="100" velocity="10" />
        <axis xyz="0 0 1" />
        <parent link="base_link" />
        <child link="front_left_wheel_link" />
        <origin xyz="0.127 0.089 -0.0508" rpy="0 0 0" /> <!-- 5, 3.5, 2 -->
    </joint>
    <link name="front_left_wheel_link">
        <inertial>
            <mass value="0.01" />
            <origin xyz="0 0 0" /> 
            <inertia  ixx="0.01" ixy="0.0"  ixz="0.0"  iyy="0.01"  iyz="0.0"  izz="0.01" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="${M_PI/2} 0 0" />
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_width}" />
            </geometry>
            <material name="Black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="${M_PI/2} 0 0" />
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_width}" />
            </geometry>
        </collision>
    </link>
    
    <!-- the front right wheel -->
    <joint name="front_right_wheel_joint" type="revolute" >
        <limit lower="-0.76096" upper="0.76096" effort="100" velocity="10" />
        <axis xyz="0 0 1" />
        <parent link="base_link" />
        <child link="front_right_wheel_link" />
        <origin xyz="0.127 -0.089 -0.0508" rpy="0 0 0" />
    </joint>
    <link name="front_right_wheel_link">
        <inertial>
            <mass value="0.01" />
            <origin xyz="0 0 0" /> 
            <inertia  ixx="0.01" ixy="0.0"  ixz="0.0"  iyy="0.01"  iyz="0.0"  izz="0.01" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="${M_PI/2} 0 0" />
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_width}" />
            </geometry>
            <material name="Black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="${M_PI/2} 0 0" />
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_width}" />
            </geometry>
        </collision>
    </link>
    
    <!-- the back left wheel -->
    <joint name="back_left_wheel_joint" type="fixed" >
        <!-- <axis xyz="0 1 0" /> -->
        <parent link="base_link" />
        <child link="back_left_wheel_link" />
        <origin xyz="-0.127 0.089 -0.0508" rpy="0 0 0" /> <!-- 5, 3.5, 2 -->
    </joint>
    <link name="back_left_wheel_link">
        <inertial>
            <mass value="0.01" />
            <origin xyz="0 0 0" /> 
            <inertia  ixx="0.01" ixy="0.0"  ixz="0.0"  iyy="0.01"  iyz="0.0"  izz="0.01" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="${M_PI/2} 0 0" />
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_width}" />
            </geometry>
            <material name="Black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="${M_PI/2} 0 0" />
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_width}" />
            </geometry>
        </collision>
    </link>
    
    <!-- the back right wheel -->
    <joint name="back_right_wheel_joint" type="fixed" >
        <!-- <axis xyz="0 1 0" /> -->
        <parent link="base_link" />
        <child link="back_right_wheel_link" />
        <origin xyz="-0.127 -0.089 -0.0508" rpy="0 0 0" />
    </joint>
    <link name="back_right_wheel_link">
        <inertial>
            <mass value="0.01" />
            <origin xyz="0 0 0" /> 
            <inertia  ixx="0.01" ixy="0.0"  ixz="0.0"  iyy="0.01"  iyz="0.0"  izz="0.01" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="${M_PI/2} 0 0" />
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_width}" />
            </geometry>
            <material name="Black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="${M_PI/2} 0 0" />
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_width}" />
            </geometry>
        </collision>
    </link>

    <!-- LIDAR -->
    <joint name="laser_base_mount_joint" type="fixed">
        <origin xyz="0.1016 0 0.05715" rpy="0 0 ${M_PI}" /> 
        <parent link="base_link"/>
        <child link="laser_link"/>
    </joint>
    <link name="laser_link" type="fixed">
        <inertial>
            <mass value="0.1"/>
            <origin xyz="0 0 0.0"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.02"/>
            <geometry>
                <cylinder radius="0.04" length="0.03175"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.025"/>
            <geometry>
                <box size="0.05 0.05 0.05"/>
            </geometry>
        </collision>
    </link>
</robot>